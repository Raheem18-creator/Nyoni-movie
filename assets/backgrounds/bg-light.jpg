 <svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="lightGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e3f2fd;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f3e5f5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glowEffect" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0" />
    </radialGradient>
    <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="5" />
      <feOffset dx="0" dy="0" result="offsetblur" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.1" />
      </feComponentTransfer>
      <feMerge>
        <feMergeNode />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background gradient -->
  <rect width="100%" height="100%" fill="url(#lightGradient)" />
  
  <!-- Soft glow effects -->
  <circle cx="20%" cy="25%" r="250" fill="url(#glowEffect)" opacity="0.4" />
  <circle cx="80%" cy="75%" r="300" fill="url(#glowEffect)" opacity="0.3" />
  
  <!-- Abstract geometric shapes -->
  <g fill="#ffffff" filter="url(#softShadow)" opacity="0.8">
    <!-- Top-left shapes -->
    <circle cx="200" cy="200" r="60" />
    <rect x="100" y="300" width="80" height="80" rx="15" />
    
    <!-- Top-right shapes -->
    <polygon points="1700,150 1800,250 1600,250" />
    <circle cx="1750" cy="400" r="50" />
    
    <!-- Bottom-left shapes -->
    <rect x="150" y="800" width="100" height="100" rx="20" />
    <circle cx="300" cy="900" r="40" />
    
    <!-- Bottom-right shapes -->
    <polygon points="1600,800 1700,700 1800,800 1700,900" />
  </g>
  
  <!-- Subtle wave patterns -->
  <path d="M0,350 C300,300 600,400 900,350 C1200,300 1500,400 1920,350 L1920,1080 L0,1080 Z" 
        fill="#ffffff" fill-opacity="0.15" />
  <path d="M0,550 C400,500 800,600 1200,550 C1600,500 1920,600 1920,550 L1920,1080 L0,1080 Z" 
        fill="#ffffff" fill-opacity="0.1" />
  
  <!-- Grid pattern -->
  <g stroke="#4a5568" stroke-width="0.5" stroke-opacity="0.08">
    <!-- Horizontal lines -->
    <path d="M0,108 L1920,108" stroke-dasharray="5,10" />
    <path d="M0,216 L1920,216" stroke-dasharray="5,10" />
    <path d="M0,324 L1920,324" stroke-dasharray="5,10" />
    <path d="M0,432 L1920,432" stroke-dasharray="5,10" />
    <path d="M0,540 L1920,540" stroke-dasharray="5,10" />
    <path d="M0,648 L1920,648" stroke-dasharray="5,10" />
    <path d="M0,756 L1920,756" stroke-dasharray="5,10" />
    <path d="M0,864 L1920,864" stroke-dasharray="5,10" />
    <path d="M0,972 L1920,972" stroke-dasharray="5,10" />
    
    <!-- Vertical lines -->
    <path d="M108,0 L108,1080" stroke-dasharray="5,10" />
    <path d="M216,0 L216,1080" stroke-dasharray="5,10" />
    <path d="M324,0 L324,1080" stroke-dasharray="5,10" />
    <path d="M432,0 L432,1080" stroke-dasharray="5,10" />
    <path d="M540,0 L540,1080" stroke-dasharray="5,10" />
    <path d="M648,0 L648,1080" stroke-dasharray="5,10" />
    <path d="M756,0 L756,1080" stroke-dasharray="5,10" />
    <path d="M864,0 L864,1080" stroke-dasharray="5,10" />
    <path d="M972,0 L972,1080" stroke-dasharray="5,10" />
    <path d="M1080,0 L1080,1080" stroke-dasharray="5,10" />
    <path d="M1188,0 L1188,1080" stroke-dasharray="5,10" />
    <path d="M1296,0 L1296,1080" stroke-dasharray="5,10" />
    <path d="M1404,0 L1404,1080" stroke-dasharray="5,10" />
    <path d="M1512,0 L1512,1080" stroke-dasharray="5,10" />
    <path d="M1620,0 L1620,1080" stroke-dasharray="5,10" />
    <path d="M1728,0 L1728,1080" stroke-dasharray="5,10" />
    <path d="M1836,0 L1836,1080" stroke-dasharray="5,10" />
  </g>
  
  <!-- Subtle particle effects -->
  <g fill="#8BC6EC" fill-opacity="0.1">
    <circle cx="400" cy="150" r="3" />
    <circle cx="550" cy="280" r="2" />
    <circle cx="700" cy="200" r="4" />
    <circle cx="850" cy="350" r="3" />
    <circle cx="1000" cy="180" r="2" />
    <circle cx="1150" cy="320" r="3" />
    <circle cx="1300" cy="250" r="2" />
    <circle cx="1450" cy="380" r="4" />
    <circle cx="1600" cy="220" r="3" />
    <circle cx="1750" cy="300" r="2" />
  </g>
</svg>
