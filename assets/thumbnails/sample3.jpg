 <svg width="400" height="225" viewBox="0 0 400 225" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#0f0c29"/>
      <stop offset="100%" stop-color="#302b63"/>
    </linearGradient>
  </defs>
  
  <!-- Space background -->
  <rect width="400" height="225" fill="url(#grad3)"/>
  
  <!-- Planets -->
  <circle cx="100" cy="100" r="40" fill="#4cc9f0" fill-opacity="0.7">
    <animate attributeName="cy" values="100;105;100" dur="4s" repeatCount="indefinite"/>
  </circle>
  <circle cx="300" cy="150" r="25" fill="#fc00ff" fill-opacity="0.7">
    <animate attributeName="cx" values="300;305;300" dur="3s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Stars -->
  <circle cx="50" cy="50" r="2" fill="white"/>
  <circle cx="150" cy="30" r="1.5" fill="white"/>
  <circle cx="250" cy="70" r="2" fill="white"/>
  <circle cx="350" cy="40" r="1.5" fill="white"/>
  <circle cx="80" cy="180" r="2" fill="white"/>
  <circle cx="200" cy="200" r="1.5" fill="white"/>
  <circle cx="320" cy="180" r="2" fill="white"/>
  
  <!-- Text -->
  <text x="200" y="120" text-anchor="middle" fill="white" font-family="Arial" font-size="32" font-weight="bold">
    SCI-FI
  </text>
  <text x="200" y="150" text-anchor="middle" fill="#4cc9f0" font-family="Arial" font-size="18">
    Space Odyssey
  </text>
  
  <!-- Spaceship -->
  <path d="M200 180 L190 200 L210 200 Z" fill="#4cc9f0"/>
  <circle cx="200" cy="180" r="10" fill="#fc00ff"/>
</svg>
