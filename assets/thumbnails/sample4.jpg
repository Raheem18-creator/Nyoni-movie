 <svg width="400" height="225" viewBox="0 0 400 225" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad4" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1d976c"/>
      <stop offset="100%" stop-color="#93f9b9"/>
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="225" fill="url(#grad4)"/>
  
  <!-- Ocean waves -->
  <path d="M0 150 Q100 130 200 150 T400 150 L400 225 L0 225 Z" fill="#1a5fb4"/>
  <path d="M0 170 Q100 150 200 170 T400 170 L400 225 L0 225 Z" fill="#1c71d8" fill-opacity="0.8"/>
  
  <!-- Fish -->
  <path d="M100 120 Q120 110 140 120 Q160 130 140 140 Q120 150 100 140 Q80 130 100 120Z" fill="#4cc9f0"/>
  <circle cx="130" cy="125" r="3" fill="white"/>
  
  <path d="M250 100 Q270 90 290 100 Q310 110 290 120 Q270 130 250 120 Q230 110 250 100Z" fill="#fc00ff"/>
  <circle cx="280" cy="105" r="3" fill="white"/>
  
  <!-- Text -->
  <text x="200" y="60" text-anchor="middle" fill="white" font-family="Arial" font-size="28" font-weight="bold">
    DOCUMENTARY
  </text>
  <text x="200" y="90" text-anchor="middle" fill="#1a5fb4" font-family="Arial" font-size="16">
    Ocean Depths
  </text>
  
  <!-- Bubbles -->
  <circle cx="180" cy="180" r="5" fill="white" fill-opacity="0.5">
    <animate attributeName="cy" values="180;160;180" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="220" cy="190" r="3" fill="white" fill-opacity="0.5">
    <animate attributeName="cy" values="190;170;190" dur="2.5s" repeatCount="indefinite"/>
  </circle>
</svg>
